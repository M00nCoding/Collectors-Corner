<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_color"
    tools:context=".UserAchievementsActivity">





    <!-- Title -->
    <TextView
        android:id="@+id/pd_achievements_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your Achievements"
        android:textColor="#FAF6F6"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pd_achievement_box_starter"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/user_achievements_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pd_achievements_title"
        />

    <ImageView
        android:id="@+id/pd_achievement_badge_starter"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_starter"
        app:layout_constraintTop_toBottomOf="@id/pd_achievements_title"
        app:srcCompat="@drawable/achievement_badge_starter" />

    <TextView
        android:id="@+id/pd_achievement_title_starter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starter"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_starter"
        app:layout_constraintTop_toBottomOf="@id/pd_achievements_title"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/pd_achievement_desc_starter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add one book to your collection"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_starter"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_title_starter"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        />

    <ProgressBar
        android:id="@+id/pd_achievement_bar_starter"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:scaleY="4"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_starter"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_starter"
        />

    <TextView
        android:id="@+id/pd_achievement_percentage_starter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_starter"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_starter"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/pd_achievement_box_collector"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_achievements_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_starter"
        />

    <ImageView
        android:id="@+id/pd_achievement_badge_collector"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_collector"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_starter"
        app:srcCompat="@drawable/achievement_badge_collector" />

    <TextView
        android:id="@+id/pd_achievement_title_collector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collector"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_collector"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_starter"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/pd_achievement_desc_collector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add three books to your collection"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_collector"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_title_collector"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        />

    <ProgressBar
        android:id="@+id/pd_achievement_bar_collector"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:scaleY="4"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_collector"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_collector"
        />

    <TextView
        android:id="@+id/pd_achievement_percentage_collector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_collector"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_collector"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/pd_achievement_box_packrat"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_achievements_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_collector"
        />

    <ImageView
        android:id="@+id/pd_achievement_badge_packrat"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_packrat"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_collector"
        app:srcCompat="@drawable/achievement_badge_packrat" />

    <TextView
        android:id="@+id/pd_achievement_title_packrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Packrat"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_packrat"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_collector"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/pd_achievement_desc_packrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add ten books to your collection"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_packrat"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_title_packrat"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        />

    <ProgressBar
        android:id="@+id/pd_achievement_bar_packrat"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:scaleY="4"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_packrat"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_packrat"
        />

    <TextView
        android:id="@+id/pd_achievement_percentage_packrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_packrat"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_packrat"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/pd_achievement_box_master"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_achievements_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_packrat"
        />

    <ImageView
        android:id="@+id/pd_achievement_badge_master"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_master"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_packrat"
        app:srcCompat="@drawable/achievement_badge_master" />

    <TextView
        android:id="@+id/pd_achievement_title_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_master"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_packrat"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/pd_achievement_desc_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add fifty books to your collection"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_master"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_title_master"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        />

    <ProgressBar
        android:id="@+id/pd_achievement_bar_master"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:scaleY="4"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_master"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_master"
        />

    <TextView
        android:id="@+id/pd_achievement_percentage_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_master"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_master"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/pd_achievement_box_legend"
        android:layout_width="350dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_achievements_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_master"
        />

    <ImageView
        android:id="@+id/pd_achievement_badge_legend"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_legend"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_master"
        app:srcCompat="@drawable/achievement_badge_legend" />

    <TextView
        android:id="@+id/pd_achievement_title_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legend"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_legend"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_box_master"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/pd_achievement_desc_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add hundred books to your collection"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_legend"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_title_legend"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        />

    <ProgressBar
        android:id="@+id/pd_achievement_bar_legend"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:scaleY="4"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_legend"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_legend"
        />

    <TextView
        android:id="@+id/pd_achievement_percentage_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/pd_achievement_box_legend"
        app:layout_constraintTop_toBottomOf="@id/pd_achievement_desc_legend"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="5dp"
        />



    <!-- Back Button -->
    <Button
        android:id="@+id/back_button_user_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        android:textColor="#FAF6F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Navigation Bar Bottom-->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

    <!--Adding genre navigation-->
    <Button
        android:id="@+id/add_genre_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Add Genre"
        android:textColor="@android:color/white" />

    <!--Adding book navigation-->
    <Button
        android:id="@+id/add_book_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Add Book"
        android:textColor="@android:color/white" />

    <!--Back to library page navigation-->
    <Button
        android:id="@+id/library_btn4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Library"
        android:textColor="@android:color/white"  />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>